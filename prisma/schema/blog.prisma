model Post {
    id          String     @id @default(cuid())
    title       String
    content     String
    status      PostStatus @default(DRAFT)
    authorId    String
    author      User       @relation(fields: [authorId], references: [id])
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
    publishedAt DateTime?
}

enum PostStatus {
    DRAFT
    PUBLISHED
    ARCHIVED
}
